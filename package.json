{
	"name": "preact-devtools",
	"version": "0.0.2",
	"description": "Preact Devtools Extension",
	"main": "dist/preact-devtools.js",
	"module": "dist/preact-devtools.module.js",
	"types": "types/devtools.d.ts",
	"scripts": {
		"build": "rm -rf dist/ && rollup -c && node tools/build-inline.js && cp dist/inline/setup.css dist/preact-devtools.css && rm -rf dist/inline",
		"test": "mochette -c tsconfig.json 'src/**/*.test.{ts,tsx}'",
		"dev": "webpack-dev-server --inline",
		"watch": "rollup -c -w"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/marvinhagemeister/preact-devtools.git"
	},
	"author": "Marvin Hagemeister <hello@marvinh.dev>",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.6.2",
		"@babel/plugin-transform-react-jsx": "^7.3.0",
		"@types/chrome": "^0.0.89",
		"@types/json5": "^0.0.30",
		"babel-loader": "^8.0.6",
		"babel-plugin-transform-rename-properties": "^0.0.3",
		"css-loader": "^3.2.0",
		"fork-ts-checker-webpack-plugin": "^1.5.0",
		"html-webpack-plugin": "^3.2.0",
		"mochette": "^0.0.6",
		"preact": "^10.0.0",
		"prettier": "^1.18.2",
		"rollup": "^1.22.0",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-copy": "^3.1.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-postcss": "^2.0.3",
		"rollup-plugin-typescript2": "^0.24.3",
		"style-loader": "^1.0.0",
		"ts-loader": "^6.2.0",
		"ts-node": "^8.4.1",
		"typescript": "^3.6.3",
		"webpack": "^4.41.0",
		"webpack-cli": "^3.3.9",
		"webpack-dev-server": "^3.8.1"
	},
	"dependencies": {
		"escape-string-regexp": "^2.0.0",
		"json5": "^2.1.0",
		"json5-es": "^2.1.1"
	},
	"peerDependency": {
		"preact": "10.x"
	},
	"files": [
		"types/",
		"dist/preact*",
		"README.md",
		"LICENSE"
	],
	"prettier": {
		"useTabs": true,
		"trailingComma": "all"
	}
}
